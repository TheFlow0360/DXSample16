<dx:ThemedWindow x:Class="DXSample16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel Margin="20">
        <Button Content="Show without Buttons"
                Click="NoButtons_OnClick" />
        <Button Content="Show with random amount of Buttons" 
                Click="WithButtons_OnClick" />
        <StackPanel Orientation="Horizontal" Margin="3">
            <TextBlock>Last chosen option: </TextBlock>
            <TextBlock x:Name="Output"
                       Margin="5,0" />
        </StackPanel>
    </StackPanel>
</dx:ThemedWindow>
